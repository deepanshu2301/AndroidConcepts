<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCal">


    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="."
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/dot"
        android:textSize="30sp"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="dot"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="0"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/dot"
        android:id="@+id/zero"
        android:textSize="30sp"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="zero"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="DEL"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/zero"
        android:id="@+id/del"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="del"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="1"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/dot"
        android:id="@+id/one"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="one"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="2"
        android:padding="10dp"
        android:layout_toRightOf="@id/one"
        android:layout_above="@id/zero"
        android:id="@+id/two"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="two"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="3"
        android:padding="10dp"
        android:layout_toRightOf="@id/two"
        android:layout_above="@id/del"
        android:id="@+id/three"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="three"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="4"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/one"
        android:id="@+id/four"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="four"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="5"
        android:padding="10dp"
        android:layout_above="@id/two"
        android:layout_toRightOf="@id/four"
        android:id="@+id/five"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="five"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="6"
        android:padding="10dp"
        android:layout_above="@id/three"
        android:layout_toRightOf="@id/five"
        android:id="@+id/six"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="six"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="7"
        android:padding="10dp"
        android:layout_above="@id/four"
        android:layout_alignParentLeft="true"
        android:id="@+id/seven"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="seven"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="8"
        android:padding="10dp"
        android:layout_above="@id/five"
        android:layout_toRightOf="@id/seven"
        android:id="@+id/eight"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="eight"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="9"
        android:padding="10dp"
        android:layout_above="@id/six"
        android:layout_toRightOf="@id/eight"
        android:id="@+id/nine"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/dgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="nine"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:text="="
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/del"
        android:id="@+id/equal"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@color/lgrey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:clickable="true"
        android:onClick="equal"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:text="+"
        android:padding="10dp"
        android:layout_above="@id/equal"
        android:layout_toRightOf="@id/three"
        android:id="@+id/plus"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@color/grey"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:gravity="center"
        android:onClick="plus"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:text="-"
        android:padding="10dp"
        android:layout_above="@id/plus"
        android:layout_toRightOf="@id/six"
        android:id="@+id/minus"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/grey"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:clickable="true"
        android:onClick="minus"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:text="*"
        android:padding="10dp"
        android:layout_above="@id/minus"
        android:layout_toRightOf="@id/three"
        android:id="@+id/multiply"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/grey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:onClick="multiply"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:text="/"
        android:padding="10dp"
        android:layout_above="@id/multiply"
        android:layout_toRightOf="@id/three"
        android:id="@+id/divide"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:background="@color/grey"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:onClick="divide"
        android:clickable="true"
        />

    <HorizontalScrollView
        android:layout_width="63dp"
        android:layout_height="300dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_above="@id/equal"
        android:scrollbars="horizontal"
        android:measureAllChildren="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_foreground"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/solution"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/divide"
        android:layout_alignParentRight="true"
        android:background="#fd6a08"
        android:gravity="end"
        android:padding="10dp"
        android:text="0.00"
        android:textSize="30dp" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_above="@id/seven"
        android:background="@color/yellow"
        android:layout_alignParentLeft="true"
        android:id="@+id/blank"
        android:layout_toLeftOf="@id/solution"/>

    <TextView
        android:id="@+id/input1"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/blank"
        android:layout_alignParentLeft="true"
        android:background="@color/dgrey"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/aquab"
        android:textSize="30sp"
        android:onClick="take1"
        android:text="INPUT1"/>

    <TextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/grey"
        android:gravity="center"
        android:padding="10dp"
        android:text="(.)"
        android:layout_toRightOf="@id/input1"
        android:layout_toLeftOf="@id/input2"
        android:layout_above="@id/blank"
        android:textColor="@color/aquab"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/input2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/solution"
        android:layout_alignParentRight="true"
        android:background="@color/dgrey"
        android:gravity="center"
        android:padding="10dp"
        android:text="INPUT2"
        android:textColor="@color/aquab"
        android:textSize="30sp"
        android:onClick="take2"/>
</RelativeLayout>




